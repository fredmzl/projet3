#!/usr/bin/env bash
#MISE description="Show backend database"

set -e

echo "ğŸ” Display data in the users and files tables"


cd "${MISE_CONFIG_ROOT}/backend"

echo ""
echo "ğŸ“ Users table:"
docker compose exec postgresql psql -U db_user -d datashare -c "SELECT * FROM users;"
echo ""
echo ""
echo "ğŸ“ Files table:"
docker compose exec postgresql psql -U db_user -d datashare -c "SELECT * FROM files;"