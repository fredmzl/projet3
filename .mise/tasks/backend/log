#!/usr/bin/env bash
#MISE description="show backend logs"

set -e
PIDFILE="${MISE_CONFIG_ROOT}/.backend.pid"

# Trap CTRL+C pour exit proprement
trap 'exit 0' INT

# Vérifier si déjà lancé
if [ ! -f "$PIDFILE" ]; then
    echo "❌ Backend is not running (no PID file found)"
    exit 1

fi

cd "${MISE_CONFIG_ROOT}/backend" || exit 1
tail -f backend.log